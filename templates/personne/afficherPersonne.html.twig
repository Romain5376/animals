{% extends 'base.html.twig' %}

{% block title %}Affichage de la personne{% endblock %}

{% block monTitre %}Affichage de {{ personne.nom }}{% endblock %}
{% block body %}
<div class="row mt-5">
    {% for dispose in personne.disposes %}
    <div class="col-lg-12 col-md-12 col-sm-12 d-flex justify-content-center">
        <div class="card" style="width: 25rem;">
            <img src="{{asset('images/' ~  dispose.animal.image)}}" class="card-img-top mr-auto ml-auto"
                alt="{{ dispose.animal.nom }}" />
            <div class="card-body text-center">
                <h3 class="card-title"><a href="{{ path('afficherAnimal', {'id' : dispose.animal.id }) }}">Le {{ dispose.animal.nom }}</a></h3>
                <ul>
                    <li><b>Nombre de {{ dispose.animal.nom }} possèdé:</b> {{ dispose.nb }}</li>
                    <li><b>Description:</b> {{ dispose.animal.description }}.</li>
                    <li><b>Poids:</b> {{ dispose.animal.poids }}kg</li>
                    <li>
                        <b>Dangereux:</b>
                        {% if dispose.animal.dangereux %}
                        <span id="yes" class="badge badge-danger">OUI</span>
                        {% else %}
                        <span id="no" class="badge badge-success">NON</span>
                        {% endif %}
                    </li>
                </ul>

                <div class="row mt-3">
                    <div class="col-4 mb-3 text-center">
                        <a href="/" class="btn btn-primary">Animaux</a>
                    </div>
                    <div class="col-4 mb-3 text-center">
                        <a href="{{ path('familles') }}" class="btn btn-warning">Familles</a>
                    </div>
                    <div class="col-4 text-center">
                        <a href="{{ path('continents') }}" class="btn btn-success">Continents</a>
                    </div>
                    <div class="col-12 text-center">
                        <a href="{{ path('personnes') }}" class="btn btn-danger">Personnes</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
</div>

{% endblock %}